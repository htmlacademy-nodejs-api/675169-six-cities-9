{
  "name": "six-cities",
  "version": "7.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.js",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "tsc --noEmit && node --no-warnings=--no-warnings=ExperimentalWarning --loader ts-node/esm",
    "cli:version": "npm run ts ./src/main.cli.ts -- --version ",
    "cli:help": "npm run ts ./src/main.cli.ts -- --help",
    "cli:import": "npm run ts ./src/main.cli.ts -- --import ./mocks/mocks.tsv",
    "cli:generate": "npm run ts ./src/main.cli.ts -- --generate 50 ./mocks/new-mocks.tsv http://localhost:3123/api",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 3123 --host localhost"
  },
  "devDependencies": {
    "@types/node": "20.12.7",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "rimraf": "5.0.1",
    "ts-node": "10.9.2",
    "typescript": "5.4.5"
  },
  "type": "module",
  "engines": {
    "node": "^22",
    "npm": "^10"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "dayjs": "^1.11.13",
    "got": "^14.4.6",
    "json-server": "^1.0.0-beta.3",
    "tslib": "^2.8.1"
  }
}
